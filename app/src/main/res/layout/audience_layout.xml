<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="30dp">

    <RelativeLayout
        android:background="#673A67"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/ln_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_pesent_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/bar_1"
                    android:gravity="center"
                    android:text="0%"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/bar_1"
                    android:layout_width="32dp"
                    android:layout_height="0dp"
                    android:background="#098" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:text="A"
                    android:textColor="#dbe206"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="28dp"
                android:layout_toRightOf="@id/ln_1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_pesent_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/bar_1"
                    android:gravity="center"
                    android:text="0%"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/bar_2"
                    android:layout_width="32dp"
                    android:layout_height="0dp"
                    android:background="#098" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:text="B"
                    android:textColor="#dbe206"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="28dp"
                android:layout_toRightOf="@id/ln_2"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_pesent_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/bar_1"
                    android:gravity="center"
                    android:text="0%"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/bar_3"
                    android:layout_width="32dp"
                    android:layout_height="0dp"
                    android:background="#098" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:text="C"
                    android:textColor="#dbe206"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="28dp"
                android:layout_toRightOf="@id/ln_3"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_pesent_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/bar_1"
                    android:gravity="center"
                    android:text="0%"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/bar_4"
                    android:layout_width="32dp"
                    android:layout_height="0dp"
                    android:background="#098" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:text="D"
                    android:textColor="#dbe206"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="250dp"
            android:layout_height="2dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="207dp"
            android:background="#ffffff" />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="102dp"
            android:layout_height="28dp"
            android:layout_below="@id/rl_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/background_button"
            android:text="Đóng"
            android:textAllCaps="false"
            android:textColor="#ffffff" />

    </RelativeLayout>

    <TextView
        android:layout_width="172dp"
        android:layout_height="50dp"
        android:text="Ý kiến khán giả"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:background="@drawable/help_call_title_background"
        android:layout_marginTop="-324dp"/>

</LinearLayout>